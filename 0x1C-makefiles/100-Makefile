CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
COMPILE = $(CC) -Wall -Werror -Wextra -pedantic

all : m.h $(NAME)

$(NAME) : $(OBJ)
	$(COMPILE) $^ -o $@

.PHONY : clean oclean fclean re

clean :
	$(RM) *~ *.swap $(NAME)
		
oclean :
	$(RM) $(OBJ)

fclean : clean oclean

re : fclean all
